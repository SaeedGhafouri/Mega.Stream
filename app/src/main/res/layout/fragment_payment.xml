<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/theme_background"
    tools:context=".PaymentFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            style="@style/Theme.Original.Toolbar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_toolbar_height"
                android:orientation="horizontal">

                <ImageButton
                    style="@style/Theme.Original.Toolbar.Button.Back"
                    android:id="@+id/btnBack"
                    android:src="@drawable/ic_back" />

            </LinearLayout>

        </com.google.android.material.appbar.MaterialToolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/appbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/size_padding_container">

            <ImageView
                android:layout_width="89dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/size_padding_40"
                android:src="@drawable/ic_payment_bulk" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_padding_20"
                android:fontFamily="@font/font_bold_fa"
                android:text="@string/payment_title"
                android:textAlignment="center"
                android:textColor="@color/theme_white_txt"
                android:textSize="@dimen/size_txt_30" />

            <!--Line @s-->
            <TextView
                style="@style/Theme.Original.TextView.Mini"
                android:layout_weight="1"
                android:text="@string/payment_how_pay" />

            <!--How pay-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_padding_10"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCardByCard"
                    style="@style/Theme.Original.Button"
                    android:layout_weight="1"
                    android:backgroundTint="@color/theme_background_body"
                    android:enabled="false"
                    android:text="@string/payment_card_by_card"
                    android:textColor="@color/theme_gray_txt" />

                <Space
                    android:layout_width="@dimen/size_padding_20"
                    android:layout_height="0dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnPaymentGetway"
                    style="@style/Theme.Original.Button"
                    android:layout_weight="1"
                    android:backgroundTint="@color/theme_background_body"
                    android:text="@string/payment_payment_getway"
                    android:textColor="@color/theme_main"
                    app:strokeColor="@color/theme_main"
                    app:strokeWidth="1dp" />

            </LinearLayout>

            <!--Line @s-->
            <TextView
                style="@style/Theme.Original.TextView.Mini"
                android:layout_weight="1"
                android:text="@string/payment_discount_code" />
            <!--Line @s-->

            <!--Discount @s-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_button_height"
                android:background="@drawable/shape_body"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingEnd="@dimen/size_padding_container">

                <TextView
                    android:id="@+id/btnApplyCoupon"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/font_medium_fa"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:gravity="center"
                    android:text="@string/payment_discount_code_submit"
                    android:textColor="@color/theme_main"
                    android:textSize="@dimen/size_txt_30" />

                <ProgressBar
                    android:id="@+id/loaderCoupon"
                    android:layout_width="90dp"
                    android:layout_height="25dp"
                    android:visibility="gone"
                    android:layout_centerInParent="true"/>

                <TextView
                    android:id="@+id/btnDeleteCoupon"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    android:fontFamily="@font/font_medium_fa"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:gravity="center"
                    android:text="@string/payment_discount_code_delect"
                    android:textColor="@color/theme_danger"
                    android:textSize="@dimen/size_txt_30" />

                <View
                    style="@style/Theme.Original.Line.Vertical"
                    android:backgroundTint="@color/theme_black_300"
                    android:layout_marginHorizontal="0dp"
                    android:layout_marginVertical="@dimen/size_padding_container" />

                <EditText
                    android:id="@+id/edCoupon"
                    style="@style/Theme.Original.EditText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:hint="@string/payment_discount_code_hint"
                    android:imeOptions="actionSearch"
                    android:inputType="text"
                    android:singleLine="true"
                    android:textColor="@color/theme_white_txt" />

            </LinearLayout>
            <!--Discount @e-->

            <!--Line @s-->
            <TextView
                style="@style/Theme.Original.TextView.Mini"
                android:layout_weight="1"
                android:text="@string/payment_topic" />
            <!--Line @s-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--topic payment-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/txtTopicPayment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="viewEnd"
                        android:text="-"
                        android:fontFamily="@font/font_regular_fa"
                        android:textSize="@dimen/size_txt_30"
                        android:textColor="@color/theme_white_txt"/>

                    <View
                        style="@style/Theme.Original.Line"
                        android:layout_height="1dp"
                        android:layout_marginHorizontal="@dimen/size_padding_container"
                        android:layout_weight="1"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="viewEnd"
                        android:text="@string/payment_topic_payment"
                        android:fontFamily="@font/font_regular_fa"
                        android:textSize="@dimen/size_txt_30"
                        android:textColor="@color/theme_gray_txt"/>

                </LinearLayout>

                <!--desc-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/size_padding_20"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/txtDescPayment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="viewEnd"
                        android:text="-"
                        android:fontFamily="@font/font_regular_fa"
                        android:textSize="@dimen/size_txt_30"
                        android:textColor="@color/theme_white_txt"/>

                    <View
                        style="@style/Theme.Original.Line"
                        android:layout_height="1dp"
                        android:layout_marginHorizontal="@dimen/size_padding_container"
                        android:layout_weight="1"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="viewEnd"
                        android:text="@string/payment_desc"
                        android:fontFamily="@font/font_regular_fa"
                        android:textSize="@dimen/size_txt_30"
                        android:textColor="@color/theme_gray_txt"/>

                </LinearLayout>

                <!--Pure price-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/size_padding_20"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/txtPaymentNetPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="viewEnd"
                        android:text="-"
                        android:fontFamily="@font/font_regular_fa"
                        android:textSize="@dimen/size_txt_30"
                        android:textColor="@color/theme_white_txt"/>

                    <View
                        style="@style/Theme.Original.Line"
                        android:layout_height="1dp"
                        android:layout_marginHorizontal="@dimen/size_padding_container"
                        android:layout_weight="1"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="viewEnd"
                        android:text="@string/payment_net_price"
                        android:fontFamily="@font/font_regular_fa"
                        android:textSize="@dimen/size_txt_30"
                        android:textColor="@color/theme_gray_txt"/>

                </LinearLayout>

                <!--discount-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/size_padding_20"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/txtPaymentDiscount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="viewEnd"
                        android:text="-"
                        android:fontFamily="@font/font_regular_fa"
                        android:textSize="@dimen/size_txt_30"
                        android:textColor="@color/theme_white_txt"/>

                    <View
                        style="@style/Theme.Original.Line"
                        android:layout_height="1dp"
                        android:layout_marginHorizontal="@dimen/size_padding_container"
                        android:layout_weight="1"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="viewEnd"
                        android:text="@string/payment_discount"
                        android:fontFamily="@font/font_regular_fa"
                        android:textSize="@dimen/size_txt_30"
                        android:textColor="@color/theme_gray_txt"/>

                </LinearLayout>

                <!--tax-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/size_padding_20"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/txtPaymentTax"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="viewEnd"
                        android:text="-"
                        android:fontFamily="@font/font_regular_fa"
                        android:textSize="@dimen/size_txt_30"
                        android:textColor="@color/theme_white_txt"/>

                    <View
                        style="@style/Theme.Original.Line"
                        android:layout_height="1dp"
                        android:layout_marginHorizontal="@dimen/size_padding_container"
                        android:layout_weight="1"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="viewEnd"
                        android:text="@string/payment_tax"
                        android:fontFamily="@font/font_regular_fa"
                        android:textSize="@dimen/size_txt_30"
                        android:textColor="@color/theme_gray_txt"/>

                </LinearLayout>

                <!--price payment-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/size_padding_20"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/txtPaymentPayable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="viewEnd"
                        android:text="-"
                        android:fontFamily="@font/font_bold_en"
                        android:textSize="@dimen/size_txt_40"
                        android:textColor="@color/theme_main"/>

                    <View
                        style="@style/Theme.Original.Line"
                        android:layout_height="1dp"
                        android:layout_marginHorizontal="@dimen/size_padding_container"
                        android:layout_weight="1"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="viewEnd"
                        android:text="@string/payment_payable"
                        android:fontFamily="@font/font_regular_fa"
                        android:textSize="@dimen/size_txt_30"
                        android:textColor="@color/theme_gray_txt"/>

                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnPayment"
                    style="@style/Theme.Original.Button"
                    android:layout_marginTop="@dimen/size_padding_30"
                    android:text="@string/payment" />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</LinearLayout>