<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/theme_background_body"
    android:gravity="center_vertical"
    android:paddingHorizontal="@dimen/size_padding_20">

    <TextView
        android:id="@+id/qualityType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_cicle_text"
        android:backgroundTint="@color/theme_main_hormony"
        android:paddingHorizontal="@dimen/size_padding_10"
        android:paddingVertical="2dp"
        android:text="زیرنویس"
        android:fontFamily="@font/font_regular_fa"
        android:textColor="@color/theme_main"
        android:textSize="@dimen/size_txt_20"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginEnd="@dimen/size_padding_20"
        android:orientation="vertical">

        <TextView
            android:id="@+id/qualityTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="viewEnd"
            android:text="کیفیت 720"
            android:fontFamily="@font/font_medium_fa"
            android:textColor="@color/theme_white_txt"
            android:textSize="@dimen/size_txt_30"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/qualitySize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="2dp"
                android:fontFamily="@font/font_regular_en"
                android:text="2 GB"
                android:textColor="@color/theme_white_txt"
                android:textSize="@dimen/size_txt_10" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_regular_fa"
                android:text="حجم:"
                android:textColor="@color/theme_gray_txt"
                android:textSize="@dimen/size_txt_20" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/qualityImg"
        android:layout_width="50dp"
        android:layout_height="32dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher"/>

</androidx.appcompat.widget.LinearLayoutCompat>