                        android:text="@string/subscription_option_03"
                        android:textAlignment="viewEnd"
                        android:textColor="@color/theme_white_fit"
                        android:textSize="@dimen/size_txt_20" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_check_mark"
                        android:layout_marginStart="@dimen/size_padding_20" />

                </LinearLayout>

                <!---->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_padding_20"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/font_regular_fa"
                        android:text="@string/subscription_option_04"
                        android:textAlignment="viewEnd"
                        android:textColor="@color/theme_white_fit"
                        android:textSize="@dimen/size_txt_20" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_check_mark"
                        android:layout_marginStart="@dimen/size_padding_20" />

                </LinearLayout>

                <!---->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_padding_20"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/font_regular_fa"
                        android:text="@string/subscription_option_05"
                        android:textAlignment="viewEnd"
                        android:textColor="@color/theme_white_fit"
                        android:textSize="@dimen/size_txt_20" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_check_mark"
                        android:layout_marginStart="@dimen/size_padding_20" />

                </LinearLayout>

                <!---->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_padding_20"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/font_regular_fa"
                        android:text="@string/subscription_option_06"
                        android:textAlignment="viewEnd"
                        android:textColor="@color/theme_white_fit"
                        android:textSize="@dimen/size_txt_20" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_check_mark"
                        android:layout_marginStart="@dimen/size_padding_20" />

                </LinearLayout>

                <!---->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_padding_20"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/font_regular_fa"
                        android:text="@string/subscription_option_07"
                        android:textAlignment="viewEnd"
                        android:textColor="@color/theme_white_fit"
                        android:textSize="@dimen/size_txt_20" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_check_mark"
                        android:layout_marginStart="@dimen/size_padding_20" />

                </LinearLayout>

            </LinearLayout>

            <!--Title-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/size_padding_container"
                android:layout_marginTop="@dimen/size_padding_40"
                android:layout_weight="1"
                android:fontFamily="@font/font_bold_fa"
                android:text="@string/subscription_list_title"
                android:textAlignment="viewEnd"
                android:textColor="@color/theme_white_fit"
                android:textSize="@dimen/size_txt_20" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerSubscription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_padding_20"
                android:visibility="gone"
                tools:listitem="@layout/item_subscription"/>

            <ProgressBar
                android:id="@+id/loader"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:visibility="visible" />

            <TextView
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/size_padding_20"
                android:fontFamily="@font/font_regular_fa"
                android:text="@string/subscription_caption02"
                android:textAlignment="center"
                android:textColor="@color/theme_gray_txt"
                android:textSize="@dimen/size_txt_20" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>