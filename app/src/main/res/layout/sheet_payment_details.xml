<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="@color/theme_background_body">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/size_padding_30"
        android:gravity="center_horizontal">

        <View
            style="@style/Theme.Original.Line.Sheet"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="@string/payment_sheet_details_title"
            android:fontFamily="@font/font_medium_fa"
            android:textSize="@dimen/size_txt_40"
            android:textColor="@color/theme_white_txt"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="@string/payment_sheet_details_desc"
            android:fontFamily="@font/font_regular_fa"
            android:textSize="@dimen/size_txt_20"
            android:textColor="@color/theme_gray_txt"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--Phone-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_padding_30"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/txtInvoiceId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1351345314"
                    android:fontFamily="@font/font_regular_fa"
                    android:textColor="@color/theme_white_txt"
                    android:textSize="@dimen/size_txt_30"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="@dimen/size_padding_20"
                    android:background="@color/theme_background_edittext"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="شماره فاکتور"
                    android:fontFamily="@font/font_regular_fa"
                    android:textColor="@color/theme_gray_txt"
                    android:textSize="@dimen/size_txt_30"/>
            </LinearLayout>

            <!--For-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_padding_30"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/txtFor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="کودکان بی سرپرست"
                    android:fontFamily="@font/font_regular_fa"
                    android:textColor="@color/theme_white_txt"
                    android:textSize="@dimen/size_txt_30"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="@dimen/size_padding_20"
                    android:background="@color/theme_background_edittext"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="بابت"
                    android:fontFamily="@font/font_regular_fa"
                    android:textColor="@color/theme_gray_txt"
                    android:textSize="@dimen/size_txt_30"/>

            </LinearLayout>

            <!--Price-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_padding_30"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/txtPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15،000 تومان"
                    android:fontFamily="@font/font_regular_fa"
                    android:textColor="@color/theme_white_txt"
                    android:textSize="@dimen/size_txt_30"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="@dimen/size_padding_20"
                    android:background="@color/theme_background_edittext"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="مبلغ"
                    android:fontFamily="@font/font_regular_fa"
                    android:textColor="@color/theme_gray_txt"
                    android:textSize="@dimen/size_txt_30"/>
            </LinearLayout>

            <!--Id-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_padding_30"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/txtUserId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#"
                    android:fontFamily="@font/font_regular_fa"
                    android:textColor="@color/theme_white_txt"
                    android:textSize="@dimen/size_txt_30"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="@dimen/size_padding_20"
                    android:background="@color/theme_background_edittext"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="شناسه کاربر"
                    android:fontFamily="@font/font_regular_fa"
                    android:textColor="@color/theme_gray_txt"
                    android:textSize="@dimen/size_txt_30"/>
            </LinearLayout>

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPayment"
            style="@style/Theme.Original.Button"
            android:layout_marginTop="@dimen/size_padding_20"
            android:backgroundTint="@color/theme_success"
            android:text="@string/payment" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.cardview.widget.CardView>