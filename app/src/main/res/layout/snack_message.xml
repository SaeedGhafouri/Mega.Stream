<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/size_radius_10">

    <LinearLayout
        android:id="@+id/snackBg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="@dimen/size_padding_20"
        android:background="@color/theme_success">

        <TextView
            android:id="@+id/snackText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/size_padding_20"
            android:layout_weight="1"
            android:text="پیام تستی"
            android:fontFamily="@font/font_regular_fa"
            android:textSize="@dimen/size_txt_30"
            android:textColor="@color/theme_white_fit"/>

        <ImageView
            android:id="@+id/snackIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_close"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>