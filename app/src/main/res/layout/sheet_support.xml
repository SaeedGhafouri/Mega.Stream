<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="@color/theme_background_body">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingVertical="@dimen/size_padding_30"
        android:gravity="center_horizontal">

        <View
            style="@style/Theme.Original.Line.Sheet"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="@string/support"
            android:fontFamily="@font/font_bold_fa"
            android:textSize="@dimen/size_txt_40"
            android:textColor="@color/theme_white_txt"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="@string/support_caption"
            android:fontFamily="@font/font_regular_fa"
            android:textSize="@dimen/size_txt_20"
            android:textColor="@color/theme_gray_txt"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/size_padding_20"
            android:paddingVertical="@dimen/size_padding_20"
            android:background="@drawable/shape_body">

            <!--Item One-->
            <LinearLayout
                android:id="@+id/btnTel"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_button_height"
                android:paddingHorizontal="@dimen/size_padding_30"
                android:foreground="?attr/selectableItemBackground"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_arrow"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font_medium_fa"
                    android:textColor="@color/theme_white_txt"
                    android:textSize="@dimen/size_txt_30"
                    android:layout_weight="1"
                    android:text="@string/support_tel"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="@dimen/size_padding_20"
                    android:src="@drawable/ic_key"/>

            </LinearLayout>

            <!--Item Two-->
            <LinearLayout
                android:id="@+id/btnEmail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_button_height"
                android:paddingHorizontal="@dimen/size_padding_30"
                android:gravity="center_vertical"
                android:foreground="?attr/selectableItemBackground"
                android:clickable="true"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_arrow"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font_medium_fa"
                    android:textSize="@dimen/size_txt_30"
                    android:textColor="@color/theme_white_txt"
                    android:layout_weight="1"
                    android:text="@string/support_email"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="@dimen/size_padding_20"
                    android:src="@drawable/ic_support"/>

            </LinearLayout>

            <!--Item Tree-->
            <LinearLayout
                android:id="@+id/btnTelegram"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_button_height"
                android:paddingHorizontal="@dimen/size_padding_30"
                android:gravity="center_vertical"
                android:foreground="?attr/selectableItemBackground"
                android:clickable="true"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_arrow"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font_medium_fa"
                    android:textSize="@dimen/size_txt_30"
                    android:textColor="@color/theme_white_txt"
                    android:layout_weight="1"
                    android:text="@string/support_telegram"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="@dimen/size_padding_20"
                    android:src="@drawable/ic_archive"
                    app:tint="@color/theme_gray_txt"/>

            </LinearLayout>

            <!--Item Tree-->
            <LinearLayout
                android:id="@+id/btnTicket"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_button_height"
                android:paddingHorizontal="@dimen/size_padding_30"
                android:gravity="center_vertical"
                android:foreground="?attr/selectableItemBackground"
                android:clickable="true"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_arrow"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font_medium_fa"
                    android:textSize="@dimen/size_txt_30"
                    android:textColor="@color/theme_white_txt"
                    android:layout_weight="1"
                    android:text="@string/support_report"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="@dimen/size_padding_20"
                    android:src="@drawable/ic_roll"/>

            </LinearLayout>


        </LinearLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.cardview.widget.CardView>