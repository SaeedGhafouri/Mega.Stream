<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="@color/theme_background_body">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingVertical="@dimen/size_padding_30"
        android:paddingBottom="30dp"
        android:gravity="center_horizontal">

        <View
            style="@style/Theme.Original.Line.Sheet"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="@string/choice_player"
            android:fontFamily="@font/font_medium_fa"
            android:textSize="@dimen/size_txt_40"
            android:textColor="@color/theme_white_txt"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="@string/choice_player_desc"
            android:fontFamily="@font/font_regular_fa"
            android:textSize="@dimen/size_txt_20"
            android:textColor="@color/theme_gray_txt"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <!--Defult PLayer-->
                <LinearLayout
                    android:id="@+id/btnPlayerMga"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/ic_mega_player" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textAlignment="center"
                        android:text="Mega Player"
                        android:fontFamily="@font/font_bold_en"
                        android:textSize="@dimen/size_txt_20"
                        android:textColor="@color/theme_white_txt"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:textAlignment="center"
                        android:text="Defult"
                        android:fontFamily="@font/font_regular_en"
                        android:textSize="@dimen/size_txt_10"
                        android:textColor="@color/theme_gray_txt"/>

                </LinearLayout>

                <!--Vlc PLayer-->
                <LinearLayout
                    android:id="@+id/btnVlcPlayer"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/ic_vlc_player" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textAlignment="center"
                        android:text="VLC Player"
                        android:fontFamily="@font/font_bold_en"
                        android:textSize="@dimen/size_txt_20"
                        android:textColor="@color/theme_white_txt"/>

                    <TextView
                        android:id="@+id/txtVlcInstall"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:textAlignment="center"
                        android:text=""
                        android:fontFamily="@font/font_regular_en"
                        android:textSize="@dimen/size_txt_10"
                        android:textColor="@color/theme_gray_txt"/>

                </LinearLayout>

                <!--Mx PLayer-->
                <LinearLayout
                    android:id="@+id/btnMxPlayer"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/ic_mx_player" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textAlignment="center"
                        android:text="MX Player"
                        android:fontFamily="@font/font_bold_en"
                        android:textSize="@dimen/size_txt_10"
                        android:textColor="@color/theme_white_txt"/>

                    <TextView
                        android:id="@+id/txtMxInstall"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:textAlignment="center"
                        android:text=""
                        android:fontFamily="@font/font_regular_en"
                        android:textSize="@dimen/size_txt_10"
                        android:textColor="@color/theme_gray_txt"/>

                </LinearLayout>

                <!--Defult PLayer-->
                <LinearLayout
                    android:id="@+id/btnKmPlayer"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/ic_km_player" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textAlignment="center"
                        android:text="KM Player"
                        android:fontFamily="@font/font_bold_en"
                        android:textSize="@dimen/size_txt_20"
                        android:textColor="@color/theme_white_txt"/>

                    <TextView
                        android:id="@+id/txtKmInstall"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:textAlignment="center"
                        android:text=""
                        android:fontFamily="@font/font_regular_en"
                        android:textSize="@dimen/size_txt_10"
                        android:textColor="@color/theme_gray_txt"/>

                </LinearLayout>

            </LinearLayout>

        </HorizontalScrollView>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.cardview.widget.CardView>