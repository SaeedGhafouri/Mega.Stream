<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="@color/theme_background_body">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="250dp">

            <View
                android:id="@+id/view"
                style="@style/Theme.Original.Line.Sheet"
                android:layout_marginTop="@dimen/size_padding_20"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/bg_subscription"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_padding_30"
                app:layout_constraintTop_toBottomOf="@id/view"
                android:orientation="vertical"
                android:gravity="center">

                <com.airbnb.lottie.LottieAnimationView
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    app:lottie_rawRes="@raw/subscription"
                    app:lottie_autoPlay="true"
                    app:lottie_repeatMode="restart"
                    app:lottie_loop="true"
                    app:lottie_speed="1"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_padding_20"
                    android:textAlignment="center"
                    android:text="@string/subscription_title"
                    android:textColor="@color/theme_white_fit"
                    android:textSize="@dimen/size_txt_40"
                    android:fontFamily="@font/font_bold_fa" />

                <!--<TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_padding_10"
                    android:textAlignment="center"
                    android:text="@string/subscription_title_en"
                    android:textColor="@color/theme_white_fit"
                    android:textSize="@dimen/size_txt_40"
                    android:fontFamily="@font/font_bold_en" />-->

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_padding_20"
                    android:textAlignment="center"
                    android:text="@string/subscription_caption"
                    android:textColor="@color/theme_white_fit"
                    android:textSize="@dimen/size_txt_20"
                    android:fontFamily="@font/font_regular_fa" />

            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnActive"
            style="@style/Theme.Original.Button"
            android:layout_marginHorizontal="@dimen/size_padding_container"
            android:layout_marginTop="@dimen/size_padding_40"
            android:text="@string/subscription_submit"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNotNow"
            style="@style/Theme.Original.Button"
            android:layout_marginHorizontal="@dimen/size_padding_container"
            android:text="@string/skip"
            android:backgroundTint="@color/theme_background_body"/>
    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.cardview.widget.CardView>