<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:layout_marginBottom="@dimen/size_padding_20"
    android:orientation="vertical"
    app:cardElevation="0dp"
    app:cardCornerRadius="@dimen/size_radius_10"
    android:backgroundTint="@color/theme_background_body"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/categoryImg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/theme_dark_fit"
            android:alpha="0.5"/>

        <TextView
            android:id="@+id/categoryTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/size_padding_20"
            android:layout_marginHorizontal="@dimen/size_padding_20"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/font_bold_fa"
            android:text="دسته بندی تست"
            android:textAlignment="textStart"
            android:textColor="@color/theme_white_fit"
            android:textSize="@dimen/size_txt_40"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="RtlCompat" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>