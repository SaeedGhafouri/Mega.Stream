                            android:fontFamily="@font/font_medium_fa"
                            android:textSize="@dimen/size_txt_30"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/size_padding_10"
