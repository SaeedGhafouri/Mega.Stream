<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.ProfileFragment"
    android:background="@color/theme_background"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_toolbar_height"
        app:title="@string/profile"
        app:titleTextColor="@color/theme_white_txt">

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/size_padding_container"
        android:padding="@dimen/size_padding_30"
        android:background="@drawable/shape_body">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <!--Username-->
            <TextView
                android:id="@+id/txtUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="viewStart"
                android:text="@string/test_username"
                android:textSize="@dimen/size_txt_30"
                android:textColor="@color/theme_white_txt"
                android:fontFamily="@font/font_bold_en" />

            <!--Email-->
            <TextView
                android:id="@+id/txtEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="viewStart"
                android:layout_marginTop="@dimen/size_padding_20"
                android:text="@string/test_email"
                android:textSize="@dimen/size_txt_30"
                android:textColor="@color/theme_gray_txt"
                android:fontFamily="@font/font_regular_en" />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:elevation="0dp"
            app:cardCornerRadius="40dp"
            android:layout_gravity="center_vertical"
            android:innerRadius="0dp"
            android:shape="ring"
            android:thicknessRatio="1.9">
            <ImageView
                android:id="@+id/imgVector"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher">
            </ImageView>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_padding_20"
        android:layout_marginHorizontal="@dimen/size_padding_container"
        android:padding="@dimen/size_padding_30"
        android:background="@drawable/shape_body">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <!--Username-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/time_stream"
                android:textAlignment="center"
                android:textSize="@dimen/size_txt_20"
                android:textColor="@color/theme_gray_txt"
                android:fontFamily="@font/font_regular_fa" />

            <!--Email-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_padding_20"
                android:text="-"
                android:textAlignment="center"
                android:textSize="@dimen/size_txt_20"
                android:textColor="@color/theme_white_txt"
                android:fontFamily="@font/font_regular_en" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <!--Username-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/level_user"
                android:textAlignment="center"
                android:textSize="@dimen/size_txt_20"
                android:textColor="@color/theme_gray_txt"
                android:fontFamily="@font/font_regular_fa" />

            <!--Email-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_padding_20"
                android:text="0"
                android:textAlignment="center"
                android:textSize="@dimen/size_txt_20"
                android:textColor="@color/theme_white_txt"
                android:fontFamily="@font/font_regular_en" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <!--Username-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/date_register"
                android:textAlignment="center"
                android:textSize="@dimen/size_txt_20"
                android:textColor="@color/theme_gray_txt"
                android:fontFamily="@font/font_regular_fa" />

            <!--Email-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_padding_20"
                android:text="0"
                android:textAlignment="center"
                android:textSize="@dimen/size_txt_20"
                android:textColor="@color/theme_white_txt"
                android:fontFamily="@font/font_regular_en" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_padding_20"
        android:layout_marginHorizontal="@dimen/size_padding_container"
        android:padding="@dimen/size_padding_30"
        android:background="@drawable/shape_body">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <!--Username-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/time_stream"
                android:textAlignment="center"
                android:textSize="@dimen/size_txt_20"
                android:textColor="@color/theme_gray_txt"
                android:fontFamily="@font/font_regular_fa" />

            <!--Email-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_padding_20"
                android:text="-"
                android:textAlignment="center"
                android:textSize="@dimen/size_txt_20"
                android:textColor="@color/theme_white_txt"
                android:fontFamily="@font/font_regular_en" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <!--Username-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/level_user"
                android:textAlignment="center"
                android:textSize="@dimen/size_txt_20"
                android:textColor="@color/theme_gray_txt"
                android:fontFamily="@font/font_regular_fa" />

            <!--Email-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_padding_20"
                android:text="0"
                android:textAlignment="center"
                android:textSize="@dimen/size_txt_20"
                android:textColor="@color/theme_white_txt"
                android:fontFamily="@font/font_regular_en" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <!--Username-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/date_register"
                android:textAlignment="center"
                android:textSize="@dimen/size_txt_20"
                android:textColor="@color/theme_gray_txt"
                android:fontFamily="@font/font_regular_fa" />

            <!--Email-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_padding_20"
                android:text="0"
                android:textAlignment="center"
                android:textSize="@dimen/size_txt_20"
                android:textColor="@color/theme_white_txt"
                android:fontFamily="@font/font_regular_en" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>