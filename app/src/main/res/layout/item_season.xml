<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginBottom="@dimen/size_padding_20"
    app:cardCornerRadius="@dimen/size_radius_10"
    android:backgroundTint="@color/theme_background_body"
    android:layout_height="@dimen/size_button_height">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/itemSeasonTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="فصل اول"
            android:textColor="@color/theme_white_txt"
            android:fontFamily="@font/font_medium_fa"
            android:textSize="@dimen/size_txt_30"/>

        <TextView
            android:id="@+id/itemSeasonValue"
            android:layout_width="@dimen/size_button_height"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="02"
            android:textColor="@color/theme_main"
            android:fontFamily="@font/font_bold_en"
            android:textSize="@dimen/size_txt_40"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>